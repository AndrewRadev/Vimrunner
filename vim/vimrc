set nocompatible

filetype plugin on
filetype indent on
syntax on

set noswapfile nobackup

" remove default ~/.vim directories to avoid loading plugins
set runtimepath-=~/.vim
set runtimepath-=~/.vim/after

" Used to hold the output of VimrunnerEvaluateCommandOutput. Expected to be
" queried immediately after that function is called.
let g:_vimrunner_output = ''

function! VimrunnerEvaluateCommandOutput(command)
  let v:errmsg = ''

  redir => g:_vimrunner_output
  silent! exe a:command
  redir END

  if v:errmsg != ''
    let g:_vimrunner_output = v:errmsg
    let v:errmsg = ''
  endif
endfunction
